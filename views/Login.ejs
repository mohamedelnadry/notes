<%- include('./shared/Header.ejs') %>

    <div class="container my-5 py-5">
        <div class="col-md-5 m-auto text-center">
            <form action="/handleSignin" method="POST">
                <div class="form-group">
                    <input value="<%= oldInputs.length == 0?'':oldInputs[0].email%>" placeholder="Enter email" name="email" type="email" class="form-control" />
                    <% if (errors.find(data=> data.param == 'email' )) { %>
                        <div class="alert alert-danger text-center">
                            invalid email
                        </div>
                    <% } %>
                </div>
                <div class="form-group">
                    <input value="<%= oldInputs.length == 0?'':oldInputs[0].password%>" placeholder="confirm Password" name="password" type="password" class="form-control" />
                    <% if (errors.find(data=> data.param == 'password' )) { %>
                        <div class="alert alert-danger text-center">
                            invalid password
                        </div>
                    <% } %>
                </div>
                <% if (myemail.length !=0) { %>
                    <div class="alert alert-danger text-center">
                        wrong email
                    </div>
                <% } %>
                <% if (mypassword.length !=0) { %>
                    <div class="alert alert-danger text-center">
                        wrong password
                    </div>
                <% } %>
                <button type="submit" class="btn btn-info w-100">SignIn</button>
            </form>
        </div>
    </div>

    <%- include('./shared/Footer.ejs') %>